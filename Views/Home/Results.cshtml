@model Web.Models.ResultsModel

@{
    ViewData["Title"] = "Results";
}

<div class="jumbotron">
    <div class="container centred-text">
        <h1 class="display-3">Image Colour Swap</h1>
    </div>
</div>

<div class="container results-left">
    <div class="image-card-results">
        <h2>Source Image</h2>
        <img
            class="image-frame-small" 
            id="source-image" 
            src=@Model.SourceImage />
    </div>

    <div class="image-card-results">
        <h2>Pallette Image</h2>
        <img
            class="image-frame-small" 
            id="pallette-image"
            src=@Model.PalletteImage />
    </div>
</div>

<div class="container results-right">
    <div class="image-card-results">
        <h2>Output Image</h2>
        <img
            class="image-frame-large" 
            id="output-image"
            src=@Model.OutputImage />
    </div>
</div>

<div class="container flex-display">
    
</div>

<div class="container centred-text">
    @Html.ActionLink("Return to Image Selection", "Index", "Home", null, new { @class = "btn btn-success begin-button" })
</div>